{
  "name": "email-parser",
  "version": "1.0.0",
  "description": "Email parser service for pickleball reservations",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@azure/identity": "^4.13.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "imapflow": "^1.0.163",
    "mailparser": "^3.6.5",
    "node-cron": "^3.0.3",
    "redis": "^5.10.0",
    "sanitize-html": "^2.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/microsoft-graph": "^2.40.1",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/sanitize-html": "^2.13.0",
    "@types/supertest": "^6.0.3",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
